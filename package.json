{
  "name": "@m5nv/kiscss",
  "version": "0.5.01",
  "description": "kis❤️css - keep it simple css",
  "author": "Million Views, LLC",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:million-views/kis.css.git"
  },
  "eslintIgnore": [
    "src/app/main.js"
  ],

  "main": "dist/main.js",
  "css": "dist/kis.css",
  "targets": {
    "main": "src/app/main.js",
    "css": "src/lib/ki.scss"
  },
  "scripts": {
    "lint": "eslint src --cache",
    "lint:fix": "eslint --fix src",
    "build": "parcel build --target css",
    "watch": "parcel watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix src",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "parcel": "^2.8.0",
    "eslint": "^8.29.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-jsx": "^11.0.0",
    "eslint-config-standard-react": "12.0.0",
    "husky": "^8.0.2"
  }
}
